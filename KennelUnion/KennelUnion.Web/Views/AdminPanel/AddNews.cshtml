@model KennelUnion.Data.Entities.News

@{
    ViewBag.Title = "Dodaj aktualność";
}

<h1>@ViewBag.Title</h1>

<form asp-controller="AdminPanel" asp-action="AddNews" method="post">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input class="form-control" asp-for="Title" />
    </div>
    <div class="form-group">
        <label asp-for="Preview"></label>
        <input class="form-control" asp-for="Preview" />
    </div>
    @await Html.PartialAsync("_HtmlEditor")
    @Html.TextAreaFor(model => model.Body)
    <button type="submit" class="btn btn-default">Zapisz</button>
</form>