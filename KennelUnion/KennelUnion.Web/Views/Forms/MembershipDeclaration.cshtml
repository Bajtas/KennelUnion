@model KennelUnion.Web.Models.MembershipDeclarationViewModel
@{
    ViewBag.Title = "Deklaracja członkowstwa przydomka hodowlanego";
}

<h1>@ViewBag.Title</h1>
<form asp-controller="Forms" asp-action="MembershipDeclaration" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name"/>
    </div>
    <div class="form-group">
        <label asp-for="Lastname"></label>
        <input asp-for="Lastname" />
    </div>
    <div class="form-group">
        <label asp-for="Street"></label>
        <input asp-for="Street" />
    </div>
    <div class="form-group">
        <label asp-for="Post"></label>
        <input asp-for="Post" />
    </div>
    <div class="form-group">
        <label asp-for="Location"></label>
        <input asp-for="Location" />
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" />
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" />
    </div>
    <div class="form-group">
        <label asp-for="Contribution"></label>
        <input asp-for="Contribution" />
    </div>
    
    <div class="form-group">
        <label asp-for="Nickname1"></label>
        <input asp-for="Nickname1" />
    </div>
    <div class="form-group">
        <label asp-for="Nickname2"></label>
        <input asp-for="Nickname2" />
    </div>
    <div class="form-group">
        <label asp-for="Nickname3"></label>
        <input asp-for="Nickname3" />
    </div>
    <div asp-validation-summary="All"></div>
    <button type="submit" class="btn btn-default">Wyślij</button>
</form>