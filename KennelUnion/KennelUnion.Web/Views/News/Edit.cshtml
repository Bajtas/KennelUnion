@using Microsoft.AspNetCore.Mvc.ViewFeatures
@model KennelUnion.Data.Entities.News

@{
    ViewData["Title"] = "Edytuj ogłoszenie";
    ViewData["TextAreaId"] = "Body";
    ViewData["Content"] = Model.Body;
}

<h1>Edytuj</h1>
<form asp-controller="News" asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title"/>
    </div>
    <div class="form-group">
        <label asp-for="Preview"></label>
        <input asp-for="Preview"/>
    </div>
    @await Html.PartialAsync("_HtmlEditor")
    @Html.TextAreaFor(model => model.Body)
    <button type="submit" class="btn btn-default">Zapisz</button>
</form>